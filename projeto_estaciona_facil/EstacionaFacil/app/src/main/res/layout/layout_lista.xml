<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imagem_veiculo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="64dp"
        android:src="@drawable/ic_veiculo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:paddingTop="6dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtplaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="PLACA:  "/>
        <TextView
            android:id="@+id/txt_placa_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123-123"
            android:textSize="15sp"
            android:layout_toRightOf="@id/txtplaca"

            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtmodelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="MODELO: "/>
            <TextView
                android:id="@+id/txt_modelo_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtmodelo"
                android:text="FOX"
                android:textSize="14sp"

            />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>